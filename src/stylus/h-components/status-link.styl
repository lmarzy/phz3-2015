/* ==========================================================================
   COMPONENTS - STATUS-LINK
   ========================================================================== */

@keyframes status-link {
 0% 		{ transform: translateY(20px) }
 100% 	{ opacity: 1; transform: translateY(0); }
}

.c-status-link {
  opacity: 0;
  animation: status-link 1200ms 2800ms ease-in forwards;

    &__icon {
      position: relative;
      top: 2px;
      margin-left: 4px;
      opacity: 0.7;
    }
}
