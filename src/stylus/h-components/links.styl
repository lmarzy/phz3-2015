/* ==========================================================================
   COMPONENTS - LINKS
   ========================================================================== */

@keyframes twitter {
  0% 		{ opacity: 0; transform: scale(0.4) }
  100% 	{ opacity: 0.4; transform: scale(1) }
}

@keyframes linkedin {
  0% 		{ opacity: 0; transform: scale(0.4) }
  100% 	{ opacity: 0.4; transform: scale(1) }
}

@keyframes blog {
  0% 		{ opacity: 0; transform: scale(0.4) }
  100% 	{ opacity: 0.4; transform: scale(1) }
}

.c-links {
  margin-bottom: base-spacing;

    &__item {
      display: inline-block;
      padding: 0 rem(4px);
    }

    &__link {
      display: block;
      width: rem(36);
      height: rem(36);
      padding: rem(8px);
      background-color: colours.brand.a;
      border-radius: 50%;
      color: colours.brand.b;
      opacity: 0.4;

        +bp('20', max) {
          opacity: 0;

            &--twitter {
              animation: twitter 700ms 1000ms ease-in forwards;
            }
            &--linkedin {
              animation: linkedin 700ms 1400ms ease-in forwards;
            }
            &--blog {
              animation: blog 700ms 1800ms ease-in forwards;
            }
        }
    }

}
