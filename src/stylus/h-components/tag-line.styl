   COMPONENTS - TAG-LINE
   ========================================================================== */

@keyframes tagline {
  0% 		{ opacity: 0; transform: translateX(-80px) }
  100% 	{ opacity: 1; transform: translateX(0); }
}

.c-tagline {
  font-style: italic;
  animation: tagline 1600ms ease-in;
}
