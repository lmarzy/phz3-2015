/* ==========================================================================
   COMPONENTS - HEADER
   ========================================================================== */

@keyframes site-header {
  0% 		{ transform: translateX(-120px) }
  100% 	{ opacity: 1; transform: translateX(0); }
}

.c-site-header {
  color: lighten(colours.brand.b,30);
  background: colours.brand.b;
  text-align: center;
  overflow: hidden;

    &__contact {
      margin-bottom: base-spacing;
    }

  //BREAKPOINTS

  +bp('20', max) {
    display: flex;
    height: 100vh;
    align-items: center;
    justify-content: center;
    padding: 0 rem(12px);
    transition: transform 800ms ease-in;

      &__status {
          position: fixed;
          top: 0;
          bottom: 0;
          right: rem(-200px);
          width: rem(200px);
          z-index: -1;
      }

      &__is-status-revealed {
        transform: translateX(-200px);
      }
  }

  +bp('20') {

    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    width: rem(320px);
    opacity: 0;
    animation: site-header 1200ms ease-in forwards;

      &__status-link {
        display: none;
      }

      div {
        padding: base-spacing rem(12px) 0 rem(12px);
      }

  }

}
