/* ==========================================================================
   COMPONENTS - HEADER
   ========================================================================== */

.c-site-header {
  color: lighten(colours.brand.b,30);
  background: colours.brand.b;
  text-align: center;

    +bp('20', max) {
      display: flex;
      height: 100vh;
      align-items: center;
      justify-content: center;
      padding: 0 rem(12px);
      transition: transform 800ms ease-in;

        &__status {
            position: fixed;
            top: 0;
            bottom: 0;
            right: rem(-200px);
            width: rem(200px);
            z-index: -1;
        }

        &__is-status-revealed {
          transform: translateX(-200px);
        }
    }

    &__contact {
      margin-bottom: base-spacing;
    }

    +bp('20') {

      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      width: rem(320px);
      padding-top: base-spacing;

      &__status-link {
        display: none;
      }

    }

}
